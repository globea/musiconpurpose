card_margin = 2px

.card
  cursor pointer
  transition all 500ms
  
  .content
    position absolute
    top card_margin
    bottom card_margin
    left card_margin
    right card_margin
    background-size cover
    background-position center
    //box-shadow rgba(0, 0, 0, 0.4) 0 1px 3px
    transition all 300ms
  h2
    position absolute
    bottom 0
    left 0
    right 0
    margin 0
    padding 10px
    background white
    color #333
    font-size 13px

  &:hover
    transition all 0ms
    background #c00
    h2
      color white
      background #c00
      